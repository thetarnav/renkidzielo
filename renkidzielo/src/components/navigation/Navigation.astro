---
import HomeIcon from "~icons/assets/home.svg"
import LampIcon from "~icons/assets/lamp.svg"
import BeltBagIcon from "~icons/assets/belt-bag.svg"
import PaintingIcon from "~icons/assets/painting.svg"

import DesktopNav from "./DesktopNav.astro"
import MobileNav from "./MobileNav.astro"
import { Route, RouteUID } from "./types"

const currentUID = (Astro.url.pathname.split("/")[1] || "start") as RouteUID

const routes: Route[] = [
	{
		path: "/",
		name: "Start",
		uid: "start",
		icon: HomeIcon,
	},
	{
		path: "/lamps",
		name: "Lampy",
		uid: "lamps",
		icon: LampIcon,
	},
	{
		path: "/belt-bags",
		name: "Nerki",
		uid: "belt-bags",
		icon: BeltBagIcon,
	},
	{
		path: "/paintings",
		name: "Obrazy",
		uid: "paintings",
		icon: PaintingIcon,
	},
	{
		path: "/contact",
		name: "Kontakt",
		uid: "contact",
		icon: HomeIcon,
	},
	{
		path: "/gallery",
		name: "Galeria",
		uid: "gallery",
		icon: HomeIcon,
	},
]
---

<MobileNav routes={routes} currentUID={currentUID} />
<DesktopNav routes={routes} currentUID={currentUID} />
